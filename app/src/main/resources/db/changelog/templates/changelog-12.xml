<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="12" author="tim">
        <comment>Add new step types: SORTING, TEST, CORRESPONDENCE to steps.type ENUM</comment>
        
        <modifyDataType
                tableName="steps"
                columnName="type"
                newDataType="ENUM('TEXT', 'CHOICE', 'SORTING', 'CODE', 'VIDEO', 'TEST', 'CORRESPONDENCE')"/>

        <rollback>
            <modifyDataType
                    tableName="steps"
                    columnName="type"
                    newDataType="ENUM('TEXT', 'CHOICE', 'CODE', 'VIDEO')"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

