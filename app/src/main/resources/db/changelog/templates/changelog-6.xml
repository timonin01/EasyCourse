<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="6" author="tim">
        <createTable tableName="platform_user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_platform_user_user" references="users(id)"/>
            </column>
            <column name="platform" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="platform_username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="platform_email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="platform_password" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="platform_user"
                baseColumnNames="user_id"
                constraintName="fk_platform_user_user"
                referencedTableName="users"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>